{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "start": "node dist/index.js",
    "dev": "nodemon -L src/index.ts",
    "test": "jest",
    "test:watch": "jest --forceExit --detectOpenHandles  --watchAll --maxWorkers=1"
  },
  "jest": {
    "preset": "jest-presets/jest/node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "supertest": "^6.3.3",
    "typescript": "^5.1.3",
    "tools": "workspace:*"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.64",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "eslint-config-custom": "workspace:*",
    "jest": "^29.5.0",
    "jest-presets": "workspace:*",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "tsconfig": "workspace:*"
  }
}
